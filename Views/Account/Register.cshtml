@using StoreASP.Models.FormModel
@model SignUpForm

@{
    ViewData["Title"] = "Sign Up";
    Layout = "_Layout";
}

<div class="w-full h-screen flex flex-row items-center justify-center">
    <div class="hidden lg:flex flex-col items-center justify-center bg-second text-prime w-1/2 h-full">
        <h1 class="text-4xl font-bold my-5 uppercase">Store</h1>
        <h2 class="text-xl font-semibold my-3 uppercase">Sign up</h2>
    </div>
    <div class="flex flex-col items-center justify-center w-full h-full lg:w-1/2">
        <h2 class="lg:hidden text-2xl font-bold uppercase">Sign Up</h2>

        <form action="" method="post" class="w-80 flex flex-col items-start justify-center">
            <div asp-validation-summary="All" class="text-red-500 text-xs"></div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="w-full px-2 py-3 text-sm font-bold text-prime my-2"
                placeholder="First Name" />
            <p asp-validation-for="FirstName" class="text-red-500 text-xs"></p>

            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="w-full px-2 py-3 text-sm font-bold text-prime my-2"
                placeholder="Last Name" />
            <p asp-validation-for="LastName" class="text-red-500 text-xs"></p>


            <label asp-for="Email"></label>
            <input asp-for="Email" class="w-full px-2 py-3 text-sm font-bold text-prime my-2" placeholder="Email" />
            <p asp-validation-for="Email" class="text-red-500 text-xs"></p>

            <label asp-for="Password"></label>
            <input asp-for="Password" class="w-full px-2 py-3 text-sm font-bold text-prime my-2"
                placeholder="Password" />
            <p asp-validation-for="Password" class="text-red-500 text-xs"></p>

            <label asp-for="PasswordConfirm"></label>
            <input asp-for="PasswordConfirm" class="w-full px-2 py-3 text-sm font-bold text-prime my-2"
                placeholder="Confirm Password" />
            <p asp-validation-for="PasswordConfirm" class="text-red-500 text-xs"></p>

            <input class="px-2 py-3 bg-second text-prime w-full text-sm font-bold" type="submit" value="SIGN UP">
            <a asp-controller="Account" asp-action="Login" class="text-sm my-5">Already have a account? Sign in</a>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}